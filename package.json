{
  "private": true,
  "name": "frontend-toolkit",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/airkro/frontend-toolkit.git"
  },
  "files": [],
  "scripts": {
    "format": "lint-staged",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "node-storage-shim": "^2.0.0"
  },
  "optionalDependencies": {
    "@nice-move/eslint-config-base": "^0.0.4",
    "@nice-move/prettier-config": "^0.0.3",
    "ava": "^2.3.0",
    "eslint": "^6.2.1",
    "eslint-plugin-ava": "^8.0.0",
    "eslint-plugin-node": "^9.1.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ava --verbose"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": "@nice-move/prettier-config"
}
